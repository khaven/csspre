.site-navigation
  @extend $u-cf
  position: relative
  margin: 0 auto
  font-size: 0
  -transparent-bg(0.36)
  max-width: 1220px
  padding: 0 3.6%
  z-index: 1
  @media only screen and (max-width: 700px)
    padding: 0

  a
    display: inline-block
    color: #fff
    padding: 9px 4%
    font-size: 18px
    @media only screen and (max-width: 700px)
      font-size: 14px
      padding: 9px 2.9%

    &:hover
      color: $purple
      background-color: #bbb

    &:focus,
    &.active,
    &:active
      color: $purple
      background-color: #fff
