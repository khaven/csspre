.tile
  -transparent-bg()
  padding: 0.6em 1em
  display: block
  color: #333
  font-size: 14px
  border-style: solid
  border-width: 0 0 $nav-border-size
  border-color: $purple
  background-color: #eee

  &:hover,
  &:focus,
  &:active
    color: #000
    background-color: #fff

  &:focus,
  &:active
    border-color: darken(@border-color, 30%)

  h3
    margin-bottom: 0

  time
    color: #aaa
    font-size: 13px
    margin-bottom: 0.8em
